{
    "manifest_version": 3,
    "name": "Save Link to Notion",
    "version": "1.0.0",
    "description": "Save links, notes, and chat with AI about the current page directly to your Notion database.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Save to Notion",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "*://api.notion.com/",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}